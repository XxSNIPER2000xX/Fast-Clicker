import tkinter as tk
from tkinter import Text

from pynput.mouse import Button, Controller

import time

def main():
    ui()

def ui():
    root = tk.Tk()

    canvas = tk.Canvas(root, height=700, width=700, bg="#263D42")
    canvas.pack()

    toggle_on = tk.Button(root, text="Toggle On", padx=10, pady=5, relief="raised", fg="#263d42", bg="white", command=lambda:buttonToggle(toggle_on))
    toggle_on.pack()

    root.mainloop()

def buttonToggle(button: tk.Button):
    if button.config('relief')[-1] == 'sunken':
        button.config(relief="raised")
    else:
        button.config(relief="sunken")

def clickerOn(event):
    print("clicking in 3")
    time.sleep(1)
    print("2")
    time.sleep(1)
    print("1")
    time.sleep(1)

    mouse = Controller()
    
    mouse.press(Button.left)
    mouse.release(Button.left)
    print("clicking...")
    time.sleep(1)

if __name__ == "__main__":
    main()
